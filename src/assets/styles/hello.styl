// 750 设计稿：直接使用 px，postcss-pxtorem 自动转为 rem

.hello-page
  min-height 100vh
  display flex
  align-items center
  justify-content center
  padding 40px
  box-sizing border-box

.hello-card
  width 100%
  max-width 600px
  padding 60px 40px
  background linear-gradient(135deg, #667eea 0%, #764ba2 100%)
  border-radius 24px
  text-align center
  box-shadow 0 20px 60px rgba(102, 126, 234, 0.4)

.hello-title
  font-size 72px
  font-weight 700
  color #fff
  margin 0 0 24px
  letter-spacing 4px

.hello-desc
  font-size 28px
  color rgba(255, 255, 255, 0.9)
  margin 0 0 16px

.hello-sub
  font-size 24px
  color rgba(255, 255, 255, 0.7)
  margin 0 0 32px

.hello-link
  display inline-block
  padding 20px 40px
  font-size 28px
  color #fff
  background rgba(255, 255, 255, 0.2)
  border-radius 12px
  text-decoration none
